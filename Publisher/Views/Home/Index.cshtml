@{
    ViewBag.Title = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #343a40;
    }

    .form-container {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        max-width: 400px;
        margin: auto;
    }

        .form-container div {
            margin-bottom: 10px;
        }

        .form-container label {
            font-size: 1rem;
            color: #495057;
        }

        .form-container textarea {
            width: 100%;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 10px;
            font-size: 1rem;
            color: #495057;
        }

        .form-container button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            width: 100px;
            height: 50px;
            font-size: 1rem;
        }

            .form-container button:hover {
                background-color: #0056b3;
            }
</style>

<div class="form-container">
    <h2>Send Message</h2>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div>
            <label><input type="checkbox" name="selectedOption" value="orange"> Orange</label>
        </div>
        <div>
            <label><input type="checkbox" name="selectedOption" value="green"> Green</label>
        </div>
        <div>
            <label><input type="checkbox" name="selectedOption" value="black"> Black</label>
        </div>

        <br />
        <div>
            <textarea name="message" rows="4" cols="50" placeholder="Enter your message here..."></textarea>
        </div>
        <br />
        <button type="submit" value="Send">Send Message</button>
    }
</div>
